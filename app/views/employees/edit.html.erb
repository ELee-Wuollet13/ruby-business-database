<h1>Edit employee</h1>
<!--- We apologize for anyone reading this monstrosity --->

<%= form_for [@division, @employee] do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<label for="project_id">Add a project to this employee</label>
<select name="project_id">
  <% @projects.each do |project| %>
  <option value="<%= project.id %>"><%= project.name %></option>
  <% end %>
</select>
<%= f.submit  %>
<% end %>
