<h1>New project</h1>

<%= form_for @project do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit  %>
<% end %>

<% if @project.errors.any? %>
<h3>Please fix these errors:</h3>
<ul>
  <% @project.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
