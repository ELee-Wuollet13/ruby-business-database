<h1><%= @division.name %></h1>

<ul>
  <% @employees.each do |employee| %>
  <li><%= link_to employee.name, division_employee_path(@division, employee) %></li>
  <% end %>
</ul>

<p><%= link_to "Add Employee", new_division_employee_path(@division) %></p>
<p><%= link_to "Edit", edit_division_path(@division) %></p>
<p><%= link_to "Delete", division_path(@division),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to divisions", divisions_path %></p>
